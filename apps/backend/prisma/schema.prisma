
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject{
  id String @id @default(cuid())
  name String @unique
  limit Int

  student Student[]

  professor Professor? @relation(fields: [professorId], references: [id])
  professorId String?

  @@map("subject")
}

model Professor{
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String  @unique
  firstname String
  lastname String
  hash String
  rut String @unique

  subject Subject[]

  @@map("professors")
}

model Student{
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String  @unique
  firstname String
  lastname String
  hash String
  rut String @unique

  subject Subject[]

  @@map("students")
}

