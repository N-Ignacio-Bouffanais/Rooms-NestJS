
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Admin{
  id String    @id @default(auto()) @map("_id") @db.ObjectId

  email String  @unique
  password String

  subjects Subject[]
}

model Subject{
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
  limit Int

  adminId String @db.ObjectId
  admin Admin @relation(fields: [adminId], references: [id])

  students Student[]
  professors Professor[]

  @@map("subject")
}

model Student{
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String  @unique
  firstname String
  lastname String
  hash String
  role String

  subjectId String[] @db.ObjectId
  subject Subject? @relation(fields: [subjectId], references: [id])
  

  @@map("students")
}

model Professor{
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String  @unique
  firstname String
  lastname String
  hash String
  role String

  subjectId String? @db.ObjectId
  subject Subject? @relation(fields: [subjectId], references: [id])

  @@map("professors")
}


